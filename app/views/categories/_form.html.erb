<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

      <ul>
        <% category.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :category_type, style: "display: block" %>
    <%= form.text_field :category_type %>
  </div>

   <div>
    <%= form.label :product_ids, "Product", style: "display: block" %>
    <%= form.collection_select :product_ids, Product.all, :id, :name, {}, { multiple: true } %>
    <!-- Use collection_select to create a dropdown menu for selecting categories -->
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
